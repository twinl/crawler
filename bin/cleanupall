#!/bin/bash
# cleanupall: restore all split tweet files
# usage: cleanupall
# 20141028 erikt(at)xs4all.nl

BASEDIR=/home/cloud
BINDIR=$BASEDIR/bin
for DIR in locations dialect follow track trackb
do
   echo $DIR
   cd $BASEDIR/$DIR
   if [ -n "`ls [0-9]*[0-9] 2>/dev/null`" ]
   then
      $BINDIR/cleanup
   fi
done
exit 0
